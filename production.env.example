# Azure OpenAI API Credentials for Production
# Replace these values with your actual production credentials
AZURE_OPENAI_API_KEY=your_production_api_key_here
AZURE_OPENAI_ENDPOINT=your_production_endpoint_here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Deployment Mode
DEPLOYMENT_MODE=production

# Additional Production Settings
LOG_LEVEL=INFO
ENABLE_REQUEST_LOGGING=true
ENABLE_CACHING=true
CACHE_EXPIRY_SECONDS=3600
